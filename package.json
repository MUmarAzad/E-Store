{
  "name": "e-store",
  "version": "1.0.0",
  "description": "Distributed E-Commerce Platform using MERN Stack with Microservices Architecture",
  "main": "index.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:user\" \"npm run dev:product\" \"npm run dev:cart\" \"npm run dev:order\" \"npm run dev:gateway\" \"npm run dev:frontend\"",
    "dev:user": "cd backend/services/user-service && npm run dev",
    "dev:product": "cd backend/services/product-service && npm run dev",
    "dev:cart": "cd backend/services/cart-service && npm run dev",
    "dev:order": "cd backend/services/order-service && npm run dev",
    "dev:gateway": "cd backend/api-gateway && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "start": "concurrently \"npm run start:user\" \"npm run start:product\" \"npm run start:cart\" \"npm run start:order\" \"npm run start:gateway\" \"npm run start:frontend\"",
    "start:user": "cd backend/services/user-service && npm start",
    "start:product": "cd backend/services/product-service && npm start",
    "start:cart": "cd backend/services/cart-service && npm start",
    "start:order": "cd backend/services/order-service && npm start",
    "start:gateway": "cd backend/api-gateway && npm start",
    "start:frontend": "cd frontend && npm start",
    "install:all": "npm install && npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend/services/user-service && npm install && cd ../product-service && npm install && cd ../cart-service && npm install && cd ../order-service && npm install && cd ../../api-gateway && npm install",
    "install:frontend": "cd frontend && npm install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "e-commerce",
    "mern",
    "microservices",
    "nodejs",
    "react",
    "mongodb",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5"
  },
  "workspaces": [
    "backend/services/*",
    "backend/api-gateway",
    "frontend"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "cloudinary": "^2.8.0",
    "recharts": "^3.5.1"
  }
}
